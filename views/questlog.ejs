<%- include ('partials/head') %>
<%- include ('partials/navbar') %>
<div class="row">
	<div class="col">
		<div class="accordion">
			<% for (let i=0; i<numQuests; i++) { %>
				<div class="accordion-item">
					<h2 class="accordion-header" id="heading<%= i %>"> 
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= i %>" aria-expanded="false" aria-controls="collapse<%= i %>">
							<%= characters[i].character_name %> - <%= quests[i].quest_title %>
						</button>
					</h2>
					<div id="collapse<%= i %>" class="accordion-collapse collapse" aria-labelledby="heading<%= i %>" data-bs-parent="#questaccordion">
						<div class="accordion-body">
							<%= quests[i].quest_description %>
							<hr>
							<a href="/viewquest/<%= quests[i].quest_id %>">Continue Quest</a>
						</div>
					</div>
				</div>
			<% } %>
		</div>
	</div>
</div>
<%- include ('partials/foot') %>

<!-- Accordian list that just shows character name and quest title.
	 Expanding the accordian then shows quest progress and character
	 details-->