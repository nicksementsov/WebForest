<%- include ('partials/head') %>
<%- include ('partials/navbar') %>
<div class="row">
	<div class="col col-lg-6">
		<form action="/newcharacter" method="POST">
			<div class="row mb-1">
				<div class="col-3">
					<label for="characterName" class="form-label">Character Name</label>
				</div>
				<div class="col">
					<input type="text" class="form-control" id="characterName" name="characterName">
				</div>
			</div>
			<div class="row mb-2">
				<div class="col">
					<select class="form-select" name="classSelection">
						<option selected>Choose class</option>
						<% for (let char_class of classes) { %>
							<option value="<%= char_class.class_id %>"><%= char_class.class_name %></option>
						<% } %>
					</select>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<button type="submit" class="btn btn-primary">Create Character</button>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include ('partials/foot') %>